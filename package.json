{
  "name": "bdns-web",
  "version": "1.0.0",
  "description": "Web application for accessing and managing Spanish BDNS (Base de Datos Nacional de Subvenciones)",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "docs": "./docs-help.sh",
    "docker:build": "docker build -t bdns-web .",
    "docker:run": "docker run -p 3000:3000 bdns-web",
    "docker:dev": "docker-compose up -d",
    "db:sync": "node scripts/sync-bdns-data.js",
    "db:sync:full": "node scripts/sync-bdns-data.js --full",
    "db:sync:complete": "node scripts/sync-bdns-data.js --complete",
    "db:reset": "docker-compose exec postgres psql -U bdns_user -d bdns_db -c 'TRUNCATE convocatorias RESTART IDENTITY CASCADE;'"
  },
  "keywords": [
    "bdns",
    "subvenciones",
    "spain",
    "grants",
    "government",
    "api",
    "react",
    "nextjs"
  ],
  "author": "Pablo Ramirez Lazaro",
  "license": "MIT",
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@react-email/components": "^0.0.41",
    "@react-email/render": "^1.1.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^3.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/papaparse": "^5.3.16",
    "@types/pg": "^8.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "papaparse": "^5.5.3",
    "pg": "^8.16.0",
    "postcss": "^8.4.0",
    "puppeteer": "^24.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0"
  }
}
